<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<br/><br/><br/>
<h1>Your Products Catalog</h1>
<% @products.each do |product| %>
    <div class="entry">
      <h4><%= product.title %></h4>
      <p>
        <%= product.description %>
      </p>
      <div class="price">
        <span><%= number_to_currency(product.price) %></span>
        <%= button_to "Add this to Cart", line_items_path(:product_id => product) %>
      </div>
    </div>
<% end %>
<br>
<div>
  <%= link_to "Add Products", new_product_path%>
</div>
