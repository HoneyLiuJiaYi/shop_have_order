<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Products Catalog</h1>

<% @products.each do |product| %>
    <div class="entry">
      <h4><%= product.title %></h4>
      <p>
        <%= product.description %>
      </p>
      <div class="price">
        <span><%= number_to_currency(product.price) %></span>
      </div>
    </div>

<% end %>